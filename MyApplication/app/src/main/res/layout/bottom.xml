<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_bar"
    android:layout_height="65dp"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/id_wechat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_WeChat_img"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:clickable="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wechat1" />

        <TextView
            android:id="@+id/id_WeChat_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:clickable="false"
            android:saveEnabled="false"
            android:text="wechat"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:clickable="false"
            android:id="@+id/id_contacts_img"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/contacts1" />

        <TextView
            android:clickable="false"
            android:id="@+id/id_contacts_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:saveEnabled="false"
            android:text="@string/contacts"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:clickable="false"
            android:id="@+id/id_discover_img"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/discover1" />

        <TextView
            android:clickable="false"
            android:id="@+id/id_discover_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:saveEnabled="false"
            android:text="discover"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_myself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:clickable="false"
            android:id="@+id/id_myself_img"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/myself1" />

        <TextView
            android:clickable="false"
            android:id="@+id/id_myself_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:saveEnabled="false"
            android:text="myself"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
